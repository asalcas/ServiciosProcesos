<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio2.MainPage">

    <FlexLayout BackgroundColor="Grey" Direction="Column" >



        <Label Text="HEADER" TextColor="Blue" BackgroundColor="Aqua" FontSize="28" HorizontalTextAlignment="Center" />

        <FlexLayout FlexLayout.Grow="1">

            <BoxView BackgroundColor="Blue" FlexLayout.Grow="0.5"/>

            <Label Text="CONTENT" TextColor="Purple" FontSize="28" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"
                   FlexLayout.Grow="5"/>

            <BoxView BackgroundColor="Green"  FlexLayout.Grow="0.5"/>



        </FlexLayout>

        <Label Text="FOOTER" TextColor="Blue" BackgroundColor="Pink" FontSize="28" HorizontalTextAlignment="Center"/>







    </FlexLayout>

</ContentPage>
